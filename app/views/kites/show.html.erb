
<div class="columns is-multiline is-centered">
  <div class="column is-6">
    <% @kite.images.each do |image| %>
      <%= image_tag(image, class: 'main-ad-image') %>
    <% end %>
  </div>
  <div class="column is-6">
  <!-- Start info Card -->
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-2">
              <%= @kite.year %> <%= @kite.brand.brand_name %>
              <%= @kite.kite_type.titleize %>
            </p>
            <p class="subtitle is-4 price">
              $<%= number_with_precision(@kite.price, precision: 2) %>
            </p>
            <p class="subtitle is-4">
              <strong>Size: </strong><%= size_formatter(@kite.classified_type, @kite.size) %>
            </p>
            <p class="subtitle is-4">
              <strong><%= @kite.condition.titleize %></strong> Condition
            </p>
            <p class="subtitle is-4">
              <strong>Location </strong><%= @kite.city %>, <%= @kite.country %>
            </p>
            <p class="ad-listed">
              <time datetime="<%= @kite.created_at.to_date %>">Posted: <%= time_ago_in_words(@kite.created_at) %> ago</time>
            </p>
            <p class="ad-listed">
              Seen <%= pluralize(@kite.impressionist_count(:filter=>:ip_address), 'time' ) %>
            </p>
          </div>
        </div>

        <div class="content">
          <p><%= @kite.description %></p>

          <%= render 'user_contact_card' %>
          

          <div class="field is-grouped">
            <%= render 'shared/edit_menus' %>
          </div>
        </div>
        <%= link_to 'Back', kites_path, class: 'control button is-small is-fullwidth is-outlined is-link' %>
      </div>

    </div>
  <!-- END of info Card -->
  </div>
</div>